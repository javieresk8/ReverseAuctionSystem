<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="ProyectoDSS" transaction-type="RESOURCE_LOCAL">
		<class>com.modelo.entidades.EntidadContratante</class>
		<class>com.modelo.entidades.Ofertante</class>
		<class>com.modelo.entidades.Requerimiento</class>
		<class>com.modelo.entidades.Persona</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db_subastas"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="eclipselink.ddl-generation" value="none"/>
			<property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
		</properties>
	</persistence-unit>
</persistence>
